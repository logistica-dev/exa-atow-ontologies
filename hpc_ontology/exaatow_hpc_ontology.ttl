    rdf:type owl:Ontology ;
    rdfs:label "Exa-AToW HPC Resource Ontology"@en ;
    rdfs:comment """Ontology for modeling high-performance computing resources, infrastructure, 
    and physical characteristics within the Exa-AToW project.
    
    This ontology describes the physical and logical components that constitute HPC systems,
    including compute nodes, processors, storage, interconnects, and their relationships.
    It supports the modeling of supercomputer architectures, partitions, and execution environments."""@en ;
    dc:title "Exa-AToW HPC Resource Ontology"@en ;
    dc:description "Ontology for modeling high-performance computing resources, infrastructure, and physical characteristics within the Exa-AToW project."@en ;
    dcterms:created "2025-12-05"^^xsd:date ;
    dcterms:modified "2025-12-10"^^xsd:date ;
    dc:creator "Exa-AToW team" ;
    owl:versionInfo "0.2" .


#################################################################
#    Annotation properties
#################################################################

skos:prefLabel rdf:type owl:AnnotationProperty .
skos:definition rdf:type owl:AnnotationProperty .


#################################################################
# Top-level HPC Resource Classes
#################################################################

exa-atow:HPCResource rdf:type owl:Class ;
    rdfs:comment "Conceptual class encompassing physical and virtual resources involved in high-performance computing, including compute nodes, storage, interconnects, and infrastructure components."@en ,
        "Classe conceptuelle englobant les ressources physiques et virtuelles utilisées dans le calcul haute performance, comme les nœuds de calcul, le stockage, les interconnexions et les composants d'infrastructure."@fr ;
    skos:prefLabel "HPC Resource"@en ,
        "Ressource HPC"@fr .


#################################################################
# Physical Resources
#################################################################

exa-atow:PhysicalResource rdf:type owl:Class ;
    rdfs:subClassOf exa-atow:HPCResource ;
    rdfs:comment "Physical hardware components of HPC systems."@en ,
        "Composants matériels physiques des systèmes HPC."@fr ;
    skos:prefLabel "Physical Resource"@en ,
        "Ressource physique"@fr .

# --- Compute Node ---

exa-atow:ComputeNode rdf:type owl:Class ;
    rdfs:subClassOf exa-atow:PhysicalResource ;
    rdfs:comment "A physical or virtual machine in an HPC system that executes computational jobs."@en ,
        "Une machine physique ou virtuelle dans un système HPC qui exécute des tâches de calcul."@fr ;
    skos:prefLabel "Compute Node"@en ,
        "Nœud de calcul"@fr .

exa-atow:ScalarNode rdf:type owl:Class ;
    rdfs:subClassOf exa-atow:ComputeNode ;
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty exa-atow:equippedWith ;
        owl:someValuesFrom exa-atow:CPU
    ] ;
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty exa-atow:equippedWith ;
        owl:allValuesFrom exa-atow:CPU
    ] ;
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty exa-atow:equippedWith ;
        owl:minCardinality 1  # Optional: explicitly require at least 1 equipped item
    ] ;
    rdfs:comment "A compute node equipped with general-purpose CPUs only."@en ,
        "Un nœud de calcul équipé uniquement de processeurs généraux (CPU)."@fr ;
    skos:prefLabel "Scalar Node"@en ,
        "Nœud scalaire"@fr .

exa-atow:AcceleratedNode rdf:type owl:Class ;
    rdfs:subClassOf exa-atow:ComputeNode ;
    rdfs:subClassOf [
        rdf:type owl:Restriction ;
        owl:onProperty exa-atow:equippedWith ;
        owl:someValuesFrom exa-atow:GPU
    ] ;
    rdfs:comment "A compute node equipped with both CPUs and accelerators such as GPUs."@en ,
        "Un nœud de calcul équipé à la fois de CPU et d'accélérateurs comme des GPU."@fr ;
    skos:prefLabel "Accelerated Node"@en ,
        "Nœud accéléré"@fr .

exa-atow:FrontendNode rdf:type owl:Class ;
    rdfs:subClassOf exa-atow:ComputeNode ;
    rdfs:comment "Login/frontend node for user access, job submission, and compilation."@en ,
        "Nœud frontal pour l'accès utilisateur, la soumission de tâches et la compilation."@fr ;
    skos:prefLabel "Frontend Node"@en ,
        "Nœud frontal"@fr .

